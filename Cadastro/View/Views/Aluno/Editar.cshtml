
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Editar</title>
</head>
<body>
    <form action="/aluno/update" method="post">
        <div>
            <label for="campo-nome">Nome</label>
            <input type="text" name="nome" id="campo-nome" value="@ViewBag.Alunos.Nome" />
        </div>
        <div>
            <label for="campo-cpf">CPF</label>
            <input type="text" name="cpf" id="campo-cpf" value="@ViewBag.Alunos.Cpf" />
        </div>
        <div>
            <label for="campo-nota1">Nota 1</label>
            <input type="text" name="nota1" id="campo-nota1" value="@ViewBag.Alunoss.Nota1" />
        </div>
        <div>
            <label for="campo-nota2">Nota 2</label>
            <input type="text" name="nota2" id="campo-nota2" value="@ViewBag.Alunos.Nota2" />
        </div>
        <div>
            <label for="campo-nota3">Nota 3</label>
            <input type="text" name="nota3" id="campo-nota3" value="@ViewBag.Alunos.Nota3" />
        </div>

        <input type="hidden" name="id" value="ViewBag.Alunos.Id" />

        <button type="submit">Salvar</button>
    </form>
</body>
</html>
